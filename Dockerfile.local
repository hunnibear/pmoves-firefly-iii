# Custom Dockerfile for Firefly III with AI Integration
FROM fireflyiii/core:latest

# Install additional PHP extensions for AI features
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-venv \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create directory for AI scripts
RUN mkdir -p /var/www/html/ai-scripts

# Copy AI integration scripts (if you have any)
# COPY ai-scripts/ /var/www/html/ai-scripts/

# Install Python dependencies for AI processing
RUN python3 -m pip install --no-cache-dir \
    requests \
    openai \
    anthropic \
    google-generativeai \
    huggingface-hub

# Set proper permissions
RUN chown -R www-data:www-data /var/www/html/ai-scripts

# Add health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Expose port
EXPOSE 8080

# Use the original entrypoint
ENTRYPOINT ["/usr/local/bin/entrypoint.sh"]
