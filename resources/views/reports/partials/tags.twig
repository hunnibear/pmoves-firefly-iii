{% if tags|length > 0 %}
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">{{ 'tags'|_ }}</h3>
        </div>
        <div class="box-body">
            {% for tag in tags %}
                <span title="{{ tag.amount|formatAmountPlain }}"
                      style="font-size: {{ tag.fontsize * 30 }}px"

                >&nbsp;<a href="{{ route('tags.show', tag.id) }}">{{ tag.tag }}</a>&nbsp;</span>
            {% endfor %}
        </div>
    </div>

{% endif %}